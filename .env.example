# NIS2 Infrastructure Environment Variables
# Copy this file to .env and fill in your values

# ==============================
# Database Configuration
# ==============================
POSTGRES_DB=nis2_app
POSTGRES_USER=nis2user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ==============================
# Application Settings
# ==============================
DJANGO_SECRET_KEY=CHANGE_ME_GENERATE_NEW_KEY
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,your-domain.com
ENVIRONMENT=production

# ==============================
# SIEM Integration (Fluent Bit)
# ==============================
# For Elasticsearch
ELASTICSEARCH_HOST=elasticsearch.example.com

# For HTTP/SIEM (Intrusa, Splunk HEC, etc.)
SIEM_HOST=siem-api.example.com
SIEM_API_TOKEN=your-api-token-here

# ==============================
# Backup Configuration
# ==============================
BACKUP_SCHEDULE=@every 6h00m
BACKUP_KEEP_DAYS=7
# Optional: S3 backup destination
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
